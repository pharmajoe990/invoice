<%= form_for :invoice, url: invoices_path do |f| %>
  <p>
    <%= f.label :Date %><br />
    <%= f.text_field :date %><br />
    <%= f.label :Number %><br />
    <%= f.text_field :number %>

    <%= f.label :Foobar %><br />
    <%= f.text_field :foobar %>

