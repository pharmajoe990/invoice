<h1>All Invoices</h1>
<%= link_to 'Create a new Invoice', new_invoice_path %>
<table>
	<tr>
		<th>Number</th>
		<th>Date</th>
		<th>Foobar</th>
		<th></th>
	</tr>
	<% @invoices.each do |invoice| %>
	<tr>
		<td><%= invoice.number %></td>
    	<td><%= invoice.date %></td>
		<td><%= link_to 'Show', invoice_path(invoice) %></td>
		<td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
		<td><%= link_to 'Destroy', invoice_path(invoice),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>